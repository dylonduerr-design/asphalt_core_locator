<%= form_with(model: lane, class: "bg-white rounded-lg shadow-sm border border-gray-200") do |form| %>
  <% if lane.errors.any? %>
    <div class="p-4 border-b border-gray-200 bg-red-50">
      <p class="text-sm font-medium text-red-800">
        <%= pluralize(lane.errors.count, "error") %> prohibited this lane from being saved:
      </p>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% lane.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="p-4 sm:p-6 space-y-4">
    <%= form.hidden_field :sublot_id %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <%= form.label :length_ft, "Length (ft)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :length_ft, step: 0.5, min: 0, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= form.label :width_ft, "Width (ft)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :width_ft, step: 0.5, min: 0, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>
    </div>
  </div>

  <div class="px-4 py-3 sm:px-6 bg-gray-50 border-t border-gray-200 flex justify-end">
    <%= form.submit "Create Lane", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>
<% end %>
