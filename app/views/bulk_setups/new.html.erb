<div class="max-w-4xl mx-auto">
    <div class="md:flex md:items-center md:justify-between mb-6">
      <div class="min-w-0 flex-1">
        <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Add Sublots & Lanes</h2>
        <p class="mt-1 text-sm text-gray-500">Adding to Lot <strong><%= @lot.lot_number %></strong></p>
      </div>
    </div>

    <%= form_with url: lot_bulk_setup_path(@lot), method: :post, local: true, class: "space-y-6" do |form| %>
      <div class="bg-white shadow sm:rounded-lg p-6 mb-6 border border-gray-200">
        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">Configuration</h3>
        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
            <div class="sm:col-span-2">
                <label for="num_sublots" class="block text-sm font-medium text-gray-700">Sublots to add</label>
                <div class="mt-1">
                    <input type="number" id="num_sublots" value="<%= @num_sublots %>" min="1" max="20" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                </div>
            </div>
            
            <div class="sm:col-span-2">
                <label for="lanes_per_sublot" class="block text-sm font-medium text-gray-700">Lanes per sublot</label>
                 <div class="mt-1">
                    <input type="number" id="lanes_per_sublot" value="<%= @lanes_per_sublot %>" min="1" max="20" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
                </div>
            </div>

            <div class="sm:col-span-2 flex items-end">
                <button type="button" onclick="updateForms()" class="w-full bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Update Form
                </button> 
            </div>
        </div>
      </div>
      
      <% if @lot.sublots.any? %>  
        <div class="rounded-md bg-blue-50 p-4 border-l-4 border-blue-400">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                 <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1 md:flex md:justify-between">
              <p class="text-sm text-blue-700">
                <strong>Note:</strong> This lot already has <%= pluralize(@lot.sublots.count, 'sublot') %>. New sublots will start at Sublot <%= (@lot.sublots.maximum(:position) || 0) + 1 %>.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <div id="sublot-forms" class="space-y-6">
        <% @num_sublots.times do |i| %>
          <div class="bg-white shadow sm:rounded-lg overflow-hidden border border-gray-200">
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Sublot <%= @starting_position + i %></h3>
            </div>
            
            <div class="px-4 py-5 sm:p-6">
                <!-- Bulk Input Section -->
                <div class="mb-4 bg-gray-50 rounded-lg p-4 border border-gray-200">
                  <h4 class="text-sm font-medium text-gray-700 mb-3">Bulk Fill Empty Fields</h4>
                  <div class="flex flex-wrap gap-3 items-end">
                    <div class="flex-1 min-w-[120px]">
                      <label class="block text-xs font-medium text-gray-700 mb-1">Length (ft)</label>
                      <input type="number" 
                             step="0.5" 
                             min="0" 
                             placeholder="0" 
                             class="bulk-length-input shadow-sm focus:ring-pink-500 focus:border-pink-500 block w-full sm:text-sm border-gray-300 rounded-md bg-pink-50 border-pink-300"
                             data-sublot-index="<%= i %>">
                    </div>
                    <div class="flex-1 min-w-[120px]">
                      <label class="block text-xs font-medium text-gray-700 mb-1">Width (ft)</label>
                      <input type="number" 
                             step="0.5" 
                             min="0" 
                             placeholder="0" 
                             class="bulk-width-input shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md bg-green-50 border-green-300"
                             data-sublot-index="<%= i %>">
                    </div>
                    <button type="button" 
                            onclick="bulkFillLanes(<%= i %>)" 
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                      Confirm
                    </button>
                  </div>
                  <p class="mt-2 text-xs text-gray-500">This will only fill empty fields, existing values will not be changed.</p>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                      <thead>
                        <tr>
                          <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-20">Lane</th>
                          <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Length (ft)</th>
                          <th scope="col" class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Width (ft)</th>
                          <th scope="col" class="px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider w-16">Remove</th>
                        </tr>
                      </thead>
                      <tbody class="bg-white divide-y divide-gray-200 sublot-lanes-tbody" data-sublot-index="<%= i %>">
                        <% @lanes_per_sublot.times do |lane_idx| %>
                          <tr class="lane-row">
                            <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900 lane-number">
                                <%= lane_idx + 1 %>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
                              <%= number_field_tag "sublots[#{i}][lanes][#{lane_idx}][length_ft]", nil, step: 0.5, min: 0, placeholder: "0", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
                              <%= number_field_tag "sublots[#{i}][lanes][#{lane_idx}][width_ft]", nil, step: 0.5, min: 0, placeholder: "0", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                            </td>
                            <td class="px-3 py-4 whitespace-nowrap text-center">
                              <button type="button" onclick="removeLane(this)" class="text-red-600 hover:text-red-900 focus:outline-none" title="Remove lane">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                              </button>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>
                <div class="mt-4 flex items-center justify-between">
                  <p class="text-xs text-gray-500">Leave length/width blank to skip a lane.</p>
                  <button type="button" onclick="addLane(<%= i %>)" class="inline-flex items-center px-4 py-2 border-2 border-blue-500 text-sm font-medium rounded-md shadow-sm text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                    Add Lane
                  </button>
                </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="flex justify-end pt-5">
        <%= link_to "Cancel", lot_path(@lot), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit "Create All Sublots & Lanes", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
    <% end %>

    <script>
    function bulkFillLanes(sublotIndex) {
      const bulkLengthInput = document.querySelector(`.bulk-length-input[data-sublot-index="${sublotIndex}"]`);
      const bulkWidthInput = document.querySelector(`.bulk-width-input[data-sublot-index="${sublotIndex}"]`);
      const bulkLength = bulkLengthInput.value;
      const bulkWidth = bulkWidthInput.value;
      
      if (!bulkLength && !bulkWidth) {
        alert('Please enter a length and/or width value to bulk fill.');
        return;
      }
      
      const tbody = document.querySelector(`tbody[data-sublot-index="${sublotIndex}"]`);
      const rows = tbody.querySelectorAll('tr');
      let filledCount = 0;
      
      rows.forEach(row => {
        const lengthInput = row.querySelector('input[name*="[length_ft]"]');
        const widthInput = row.querySelector('input[name*="[width_ft]"]');
        
        // Only fill if the field is empty
        if (bulkLength && lengthInput && !lengthInput.value) {
          lengthInput.value = bulkLength;
          filledCount++;
        }
        
        if (bulkWidth && widthInput && !widthInput.value) {
          widthInput.value = bulkWidth;
          filledCount++;
        }
      });
      
      // Clear the bulk input fields after applying
      bulkLengthInput.value = '';
      bulkWidthInput.value = '';
      
      // Provide feedback
      if (filledCount > 0) {
        // Flash the confirm button green briefly
        const confirmBtn = event.target;
        const originalBg = confirmBtn.className;
        confirmBtn.className = confirmBtn.className.replace('bg-blue-600', 'bg-green-600').replace('hover:bg-blue-700', 'hover:bg-green-700');
        setTimeout(() => {
          confirmBtn.className = originalBg;
        }, 500);
      }
    }

    function updateForms() {
      const numSublots = document.getElementById('num_sublots').value;
      const lanesPerSublot = document.getElementById('lanes_per_sublot').value;
      window.location.href = '<%= new_lot_bulk_setup_path(@lot) %>?num_sublots=' + numSublots + '&lanes_per_sublot=' + lanesPerSublot;
    }

    function removeLane(button) {
      const row = button.closest('tr');
      const tbody = button.closest('tbody');
      
      // Don't allow removing the last lane
      if (tbody.querySelectorAll('tr').length <= 1) {
        alert('Each sublot must have at least one lane.');
        return;
      }
      
      row.remove();
      updateLaneNumbers(tbody);
    }

    function addLane(sublotIndex) {
      const tbody = document.querySelector(`tbody[data-sublot-index="${sublotIndex}"]`);
      const currentLanes = tbody.querySelectorAll('tr').length;
      const newLaneIndex = currentLanes;
      
      const newRow = document.createElement('tr');
      newRow.className = 'lane-row';
      newRow.innerHTML = `
        <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900 lane-number">
          ${currentLanes + 1}
        </td>
        <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
          <input type="number" name="sublots[${sublotIndex}][lanes][${newLaneIndex}][length_ft]" step="0.5" min="0" placeholder="0" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
        </td>
        <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">
          <input type="number" name="sublots[${sublotIndex}][lanes][${newLaneIndex}][width_ft]" step="0.5" min="0" placeholder="0" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
        </td>
        <td class="px-3 py-4 whitespace-nowrap text-center">
          <button type="button" onclick="removeLane(this)" class="text-red-600 hover:text-red-900 focus:outline-none" title="Remove lane">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </td>
      `;
      
      tbody.appendChild(newRow);
      updateLaneNumbers(tbody);
    }

    function updateLaneNumbers(tbody) {
      const sublotIndex = tbody.getAttribute('data-sublot-index');
      const rows = tbody.querySelectorAll('tr');
      
      rows.forEach((row, index) => {
        // Update lane number display
        const laneNumberCell = row.querySelector('.lane-number');
        if (laneNumberCell) {
          laneNumberCell.textContent = index + 1;
        }
        
        // Update input names
        const lengthInput = row.querySelector('input[name*="[length_ft]"]');
        const widthInput = row.querySelector('input[name*="[width_ft]"]');
        
        if (lengthInput) {
          lengthInput.name = `sublots[${sublotIndex}][lanes][${index}][length_ft]`;
        }
        if (widthInput) {
          widthInput.name = `sublots[${sublotIndex}][lanes][${index}][width_ft]`;
        }
      });
    }
    </script>
</div>
